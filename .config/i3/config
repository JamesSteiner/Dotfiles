#workspace_layout stacked

# Brightness key-binds
bindsym XF86MonBrightnessUp exec xbacklight -inc 5
bindsym XF86MonBrightnessDown exec xbacklight -dec 5 

# Opening stuff ("$exec") mode
bindsym $mod+x mode "$exec"
set mode "$open" Open: (a) Terminal, (b) Libreoffice, (c) Chrome, (d) Discord, (f) Firefox, (g) Geogebra.
mode "$open" {
	bindsym a exec i3-sensible-terminal
	bindsym b exec libreoffice --calc &, mode "default"
	bindsym c exec google-chrome-stable &, mode "default"
	bindsym d exec discord &, mode "default"
	bindsym f exec firefox &, mode "default"
	bindsym g exec geogebra &, mode "default"

	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym $mod+r mode "default"
}

